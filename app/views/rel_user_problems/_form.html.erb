<%= form_with(model: @rel_user_problem, local: true) do |form| %>
  <% if rel_user_problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rel_user_problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
      <% rel_user_problem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :suggestedgrade, "My Grade"  %>
    <%= form.select :suggestedgrade,Rails.application.config_for(:climbinginfo)["grades"]%>
    <!--%= form.text_field :suggestedgrade %-->
  </div>

  <div class="field">
    <%= form.label :highpoint,'High Point' %>
    <%= form.text_field :highpoint %>
  </div>

  <div class="field">
    <%= form.label :dohp, 'Date High Point First Achieved' %>
    <%= form.date_field :dohp %>
  </div>

  <div class="field">
    <%= form.label :firsttry, 'Date of First Attempt' %>
    <%= form.date_field :firsttry %>
  </div>

  <div class="field">
    <%= form.label :rating, "Rating (0-3 star)" %>
    <%= form.select :rating, Rails.application.config_for(:climbinginfo)["ratings"] %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>
