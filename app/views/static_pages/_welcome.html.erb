<div class="center jumbotron">

  <div class="container center mb-3">
    <%= image_tag('woody.jpg', class: "whackLogo") %>
  </div>

  <h2>Woody tracking and motivation at Harrowall</h2>
  <hr>
  <div id="problem_summary_table" class="container stats-container pl-0 pr-0 mt-3 mb-2">
    <h2 class="mb-2"><%=Problem.count%> problems</h2>
    <%#= render partial: 'users/problem_summary_table', locals: {from_where: 'home'} %>
    <%= render partial: 'users/problem_summary_home' %>
  </div>
  <hr>

  <div id="league_table" class="container leaderboard-container pl-0 pr-0 mb-3 mx-auto">
    <h2 class="mt-4 mb-2">Leaderboard</h2>
    <%= render partial: 'users/league_table', locals: {from_where: 'home', sort_applies: false} %>
  </div>

<div class="container mt-5">
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-text text-white bg-dark" %>
</div>
</div>
