<% if from_where != 'home' %>
<div class="container px-1 mb-0">
  <div class ="d-flex bg-light sort_header">
      <div class ="cell c-colheader h-problem-name">Grade</div>
      <div class ="cell c-colheader h-problem-grade">Count</div>
      <% if current_user %>
        <div class ="cell c-colheader h-problem-status">Climbed</div>
      <% end %>
  </div>
  <% @grade.each do |grade| %>
    <div class ="d-flex bg-light">
        <div class ="cell c-problem-name"><%= grade %></div>
        <div class ="cell c-problem-grade"><%= Problem.grades(grade).count %></div>
        <% if current_user %>
         <div class ="cell c-problem-status"><%= Problem.grades(grade).map { |p| p.sent?(current_user) }.count(true) %></div>
        <% end %>
    </div>
  <% end %>
</div>

<% else %>

<div class="container px-1 mt-3 mb-0">
  <% @grade.each do |grade| %>
    <div class ="grade-info">
      <div class ="grade-info-item">
        <span class="text-dark grade-info-item-count"><%= Problem.grades(grade).count %> </span>
        <span class="text-secondary"> <%= grade %> </span>
      </div>
    </div>
  <% end %>
</div>

<% end %>
